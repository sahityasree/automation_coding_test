pipeline {
    agent { docker { 
        image '3.8-rc-slim-stretch'
       } }
    
    parameters {
    	string(name: 'GIT_BRANCH',
		description: 'Set the Git Branch to deoploy',
		defaultValue: 'master')
	
    	string(name: 'GIT_COMMIT',
		description: 'Set the Git Branch to deoploy',
		defaultValue: 'none')
	
  } // parameters
 
    stages {
        stage('checkout') {
		steps {
                	git branch: '${GIT_BRANCH}', url: 'git@github.com:sahityasree/automation_coding_test.git'
			}
        }
	stage('run python') {
		steps {
			python git.py
			}
		}	
       
    }  //stages
    post {
           always {
            script {
                cleanWs deleteDirs: true
            } //script
           } //always

   
    } // post
}
